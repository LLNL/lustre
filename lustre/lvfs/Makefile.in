MODULES := lvfs
@LDISKFS_ENABLED_TRUE@MODULES += fsfilt_ldiskfs
@QUOTA_TRUE@MODULES += quotafmt_test

lvfs-objs := lvfs_linux.o fsfilt.o lvfs_lib.o

@QUOTA_TRUE@quotafmt-objs := quotafmt_test.o

@LDISKFS_ENABLED_TRUE@fsfilt_ldiskfs-objs := fsfilt-ldiskfs.o
@QUOTA_TRUE@fsfilt_ldiskfs-objs += lustre_quota_fmt.o

$(obj)/fsfilt-%.c: $(obj)/fsfilt_%.c
	ln -s $< $@

EXTRA_DIST = $(lvfs-objs:.o=.c)  $(quotafmt-objs:.o=.c) \
	fsfilt_ext3.c \
	lvfs_internal.h lvfs_userfs.c \
	lustre_quota_fmt.c lustre_quota_fmt.h quotafmt_test.c

# for <ext3/xattr.h> on 2.6
EXTRA_PRE_CFLAGS := -I@LINUX@/fs -I@LDISKFS_DIR@ -I@LDISKFS_DIR@/ldiskfs

@INCLUDE_RULES@
